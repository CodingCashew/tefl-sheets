{
  "compilerOptions": {
    "target": "es2021",
    "module": "Node16",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es2021",
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.json",
    "api/**/*.ts",
    "api/**/*.js",
    "api/**/*.jsx",
    "api/**/*.json",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node":
    {
      "files": true
    }
}
